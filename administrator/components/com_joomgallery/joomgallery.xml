<?xml version="1.0" encoding="utf-8"?>
<install type="component" version="1.5" method="upgrade">
  <name>JoomGallery</name>
  <creationDate>2010/08/29</creationDate>
  <author>JoomGallery::ProjectTeam</author>
  <copyright>This component is released under the GNU/GPL License</copyright>
  <authorEmail>team@joomgallery.net</authorEmail>
  <authorUrl>http://www.joomgallery.net</authorUrl>
  <version>1.5.5.2</version>
  <description>JoomGallery 1.5 is a native Joomla! 1.5.x gallery component</description>
  <files folder="site">
    <folder>assets</folder>
    <folder>ftp_upload</folder>
    <folder>helpers</folder>
    <folder>models</folder>
    <folder>views</folder>
    <filename>index.html</filename>
    <filename>controller.php</filename>
    <filename>interface.php</filename>
    <filename>joomgallery.php</filename>
    <filename>model.php</filename>
    <filename>router.php</filename>
    <filename>view.php</filename>
  </files>
  <languages folder="site/language">
    <language tag="en-GB">en-GB.com_joomgallery.ini</language>
    <language tag="en-GB">en-GB.com_joomgallery.exif.ini</language>
    <language tag="en-GB">en-GB.com_joomgallery.iptc.ini</language>
  </languages>
  <install>
    <sql>
      <file charset="utf8" driver="mysql">install.sql</file>
      <file driver="mysql">install.sql</file> 
    </sql>
  </install>
  <uninstall>
    <sql>
      <file charset="utf8" driver="mysql">uninstall.sql</file>
      <file driver="mysql">uninstall.sql</file> 
    </sql>
  </uninstall>
  <installfile>install.joomgallery.php</installfile>
  <uninstallfile>uninstall.joomgallery.php</uninstallfile>
  <administration>
    <menu img="components/com_joomgallery/assets/images/joom_main.png">JoomGallery</menu>
    <submenu>
      <menu img="components/com_joomgallery/assets/images/joom_categories.png" controller="categories">Category Manager</menu>
      <menu img="components/com_joomgallery/assets/images/joom_pictures.png" controller="images">Picture Manager</menu>
      <menu img="components/com_joomgallery/assets/images/joom_comments.png" controller="comments">Comments Manager</menu>
      <menu img="components/com_joomgallery/assets/images/joom_pictureupload.png" controller="upload">Picture Upload</menu>
      <menu img="components/com_joomgallery/assets/images/joom_batchupload.png" controller="batchupload">Batch Upload</menu>
      <menu img="components/com_joomgallery/assets/images/joom_ftpupload.png" controller="ftpupload">FTP Upload</menu>
      <menu img="components/com_joomgallery/assets/images/joom_jupload.png" controller="jupload">Java Upload</menu>
      <menu img="components/com_joomgallery/assets/images/joom_config.png" controller="config">Configuration Manager</menu>
      <menu img="components/com_joomgallery/assets/images/joom_css.png" controller="cssedit">Customize CSS</menu>
      <menu img="components/com_joomgallery/assets/images/joom_migration.png" controller="migration">Migration Manager</menu>
      <menu img="components/com_joomgallery/assets/images/joom_maintenance.png" controller="maintenance">Maintenance Manager</menu>
      <menu img="components/com_joomgallery/assets/images/joom_information.png" controller="help">Help</menu>
    </submenu>
    <files folder="admin">
      <folder>assets</folder>
      <folder>controllers</folder>
      <folder>elements</folder>
      <folder>helpers</folder>
      <folder>includes</folder>
      <folder>models</folder>
      <folder>tables</folder>
      <folder>temp</folder>
      <folder>views</folder>
      <filename>admin.joomgallery.php</filename>
      <filename>index.html</filename>
      <filename>controller.php</filename>
      <filename>changelog.php</filename>
      <filename>install.sql</filename>
      <filename>LICENSE.TXT</filename>
      <filename>uninstall.sql</filename>
      <filename>model.php</filename>
      <filename>view.php</filename>
    </files>
    <languages folder="admin/language">
      <language tag="en-GB">en-GB.com_joomgallery.ini</language>
      <language tag="en-GB">en-GB.com_joomgallery.menu.ini</language>
    </languages>
  </administration>
</install>
